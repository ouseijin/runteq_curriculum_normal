<div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
    <%= form_with model: comment, url: [board, comment], remote: true, id: 'new_comment' do |f| %>
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control mb-3',id: 'js-new-comment-body', placeholder: Comment.human_attribute_name(:body) %>
        <%= f.submit '投稿', class: 'btn btn-primary' %>
      <% end %>
    </div>
</div>