<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">タイトル</th>
      <th scope="col">作成者</th>
      <th scope="col">作成日</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td scope="row"><%= board.id %></td>
      <td><%= link_to board.title, admin_board_path(board) %></td>
      <td><%= board.user.decorate.full_name %></td>
      <td><%= l board.created_at,format: :long %></td>
      <td><%= link_to '詳細', admin_board_path(board), class: 'btn btn-info' %></td>
      <td><%= link_to '編集', edit_admin_board_path(board), class: 'btn btn-success' %></td>
      <td><%= link_to '削除', admin_board_path(board), data: { confirm: '削除してよろしいですか' }, class: 'btn btn-danger', method: :delete %></td>
    </tr>
  </tbody>
</table>