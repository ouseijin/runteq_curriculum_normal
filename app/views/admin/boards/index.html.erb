<% content_for(:title, t('.title')) %>
<div class="container mb-5 pt-2">
  <h1>掲示板一覧</h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form', url: admin_boards_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">タイトル</th>
          <th scope="col">作成者</th>
          <th scope="col">作成日</th>
        </tr>
        </thead>
        <tbody>
          <%= render @boards %>
        </tbody>
      </table>
    </div>
  </div> 
  <div class="row">
    <div class="col-sm-12">
      <!-- ページネーション -->
      <%= paginate @boards %>
    </div>
  </div>
</div>