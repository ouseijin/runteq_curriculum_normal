<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to '編集', edit_admin_user_path(@user), class: 'btn btn-success float-right' %>
      <%= link_to '削除', admin_user_path(@user), data: { confirm: '削除してよろしいですか' }, class: 'btn btn-danger float-right', method: :delete %>
      <table class="table">
      <tr>
          <th scope="row">ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th scope="row">氏名</th>
          <td><%= @user.decorate.full_name %></td>
        </tr>
        <tr>
          <th scope="row">アバター</th>
          <td><%= image_tag @user.avatar.url, size: '50x50', class: 'rounded-circle mr15' %></td>
        </tr>
        <tr>
          <th scope="row">権限</th>
          <td><%= @user.role_i18n %></td>
        </tr>
        <tr>
          <th scope="row">作成日時</th>
          <td><%= l @user.created_at,format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>