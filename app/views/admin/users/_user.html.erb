<tr>
  <td scope="row"><%= user.id %></td>
  <td><%= link_to user.decorate.full_name, admin_user_path(user) %></td>
  <td><%= user.role_i18n %></td>
  <td><%= l user.created_at,format: :long %></td>
  <td><%= link_to '詳細', admin_user_path(user), class: 'btn btn-info' %></td>
  <td><%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-success' %></td>
  <td><%= link_to '削除', admin_user_path(user), data: { confirm: '削除してよろしいですか' }, class: 'btn btn-danger', method: :delete %></td>
</tr>