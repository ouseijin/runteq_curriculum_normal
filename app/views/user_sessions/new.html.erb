<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1>ログイン</h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, (t 'user_sessions.new.email') %>
          <%= f.text_field :email, class: 'form-control', id: 'email' %>
        </div>
        <div class="form-group">
          <%= f.label :password, (t 'user_sessions.new.password') %>
          <%= f.text_field :password, class: 'form-control', id: 'password' %>
        </div>
        <div class="actions">
          <%= f.submit 'ログイン', class: 'btn btn-primary'%>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to (t '.to_register_page'), new_user_path %>
        <%= link_to (t '.password_forget'), new_password_reset_path %>
      </div>
    </div>
  </div>
</div>
